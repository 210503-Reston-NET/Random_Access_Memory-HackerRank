@model List<RAMWebUI.Models.TaskItemVM>;
@{
    ViewData["Title"] = "HomeHome";
}

<div class="contianer justify-content-center">

   <div class="row">
       <div class="col-4"><h1>To Do</h1></div>
       <div class="col-4"><h1>In Progress</h1></div>
       <div class="col-4"><h1>Complete</h1></div>
   </div>
        @foreach (TaskItemVM t in Model){
        <div class="row">
                <div class="col-4 stagebox" id="toDo">
                @if (t.stage == 1){
                        <div class="stage1task justify-content-center">
                            @Html.ActionLink("X", "Delete", new { id = t.TaskID })
                            <h1>@t.Title</h1>
                            <h5>Date Created:</h5>
                            <p>@t.Created</p>
                            <p>@t.Description</p>
                            @Html.ActionLink(">", "UpdateAdd", new {id = t.TaskID})
                    </div>
                }
                </div>
                <div class="col-4 stagebox" id="inProgress">
                @if (t.stage == 2){
                    <div class="stage2task justify-content-center">
                        @Html.ActionLink("X", "Delete", new { id = t.TaskID })
                        <h1>@t.Title</h1>
                        <h5>Date Created:</h5>
                        <p>@t.Created</p>
                        <p>@t.Description</p>
                        @Html.ActionLink("<", "UpdateDec", new { id = t.TaskID })
                        @Html.ActionLink(">", "UpdateAdd", new { id = t.TaskID })
                    </div>
                }
                </div>
                <div class="col-4 stagebox" id="complete">
                @if (t.stage == 3){
                    <div class="stage3task justify-content-center">
                        @Html.ActionLink("X", "Delete", new { id = t.TaskID })
                        <h1>@t.Title</h1>
                        <h5>Date Created:</h5>
                        <p>@t.Created</p>
                        <h5>Date Finished:</h5>
                        <p>@t.Finished</p>
                        <p>@t.Description</p>
                        @Html.ActionLink("<", "UpdateDec", new { id = t.TaskID })

                    </div>
                }
                </div>
        </div>
        }
          <a asp-action="Create" class="btn btn-primary">Create A Task</a>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
